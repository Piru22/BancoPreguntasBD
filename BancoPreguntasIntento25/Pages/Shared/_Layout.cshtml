@{
    var hideChrome = ViewData["HideChrome"] as bool? == true;
    var hideNav = ViewData["HideNav"] as bool? == true;
    var hideFooter = ViewData["HideFooter"] as bool? == true;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BancoPreguntas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BancoPreguntasIntento25.styles.css" asp-append-version="true" />
</head>
<body>
    @if (!hideChrome)
    {
        <header>
           
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-0" style="min-height:56px;">
                @if (!hideNav)
                {
                    <div class="container">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">BancoPreguntasIntento25</a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Alternar navegación">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Inicio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacidad</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                <!-- Si hideNav es true, no renderizamos container ni rellenos.
                     El nav ya dibuja la franja superior con su altura. -->
            </nav>

            @* Botón flotante sólo cuando la barra está vacía *@
            @if (hideNav)
            {
                <div class="nav-empty-fixed">
                    <a asp-page="/CuentaUsuarios/Logout" class="btn-logout">🔒 Cerrar sesión</a>
                </div>
            }
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!hideFooter)
    {
        <footer class="footer text-muted" style="border-top:none;">
            <div class="container text-center" style="font-size:0.9rem;color:#8b847d;">
                &copy; 2025 - BancoPreguntasIntento25 -
                <a asp-area="" asp-page="/Privacy" style="color:#8b847d;text-decoration:none;">Privacidad</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
